{
  "manifest_version": 3,
  "name": "Canvas Friend Groups",
  "version": "1.0.0",
  "description": "Share homework deadlines with friends using Canvas assignments",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvas.*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
